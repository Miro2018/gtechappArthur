<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:background="@drawable/bg_gtech_2">

    <!--<include layout="@layout/toolbar"-->
    <!--android:id="@+id/toolbar"/>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="GLICOSE"-->
            <!--android:layout_marginBottom="20dp"-->
            <!--android:textSize="15sp"-->
            <!--android:layout_gravity="center"/>-->

            <LinearLayout
                android:id="@+id/llValRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/roun_rect_white">

                <TextView
                    android:id="@+id/txtValResgistro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor (mg/dL)"
                    android:textColor="@color/string1"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edtValRegistro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"
                    android:textColor="@color/substring"
                    android:background="@color/transparent"
                    android:inputType="number"
                    android:lines="1"
                    android:imeOptions="actionDone" />

            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5dp"-->
            <!--android:background="#a6a6a6"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginBottom="5dp"/>-->

            <LinearLayout
                android:id="@+id/llDatRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/roun_rect_white"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/txtDatRegistro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data"
                    android:textColor="@color/string1"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/edtDatRegsitro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"
                    android:textColor="@color/substring"
                    android:background="@color/transparent"
                    android:lines="1" />

            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5dp"-->
            <!--android:background="#a6a6a6"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginBottom="5dp"/>-->

            <LinearLayout
                android:id="@+id/llHorRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/roun_rect_white"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/txtHorRegistro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora"
                    android:textColor="@color/string1"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/edtHorRegsitro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"
                    android:textColor="@color/substring"
                    android:background="@color/transparent"
                    android:lines="1" />

            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5dp"-->
            <!--android:background="#a6a6a6"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginBottom="5dp"/>-->

            <LinearLayout
                android:id="@+id/llEstadoAlimentacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/roun_rect_white"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/txtEstadoAlimentacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alimentação"
                    android:textColor="@color/string1"
                    android:textSize="16sp"/>

                <Spinner
                    android:id="@+id/spnAlimentacao"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/substring"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/roun_rect_white"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/txtNota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nota"
                    android:textColor="@color/string1"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edtNota"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left"
                    android:textColor="@color/substring"
                    android:background="@color/transparent"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"/>

            </LinearLayout>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5dp"-->
            <!--android:background="#a6a6a6"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginBottom="5dp"/>-->

            <Button
                android:id="@+id/btnConfirmar"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/roun_rect_gray"
                android:text="CONFIRMAR"
                android:textColor="#fff"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>